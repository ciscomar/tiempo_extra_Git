<%- include ("./static/header") %>
    <%- include ("./static/sidebar") %>
        <%- include ("./static/navbar") %>


        <div class="container">
            <div class="row mt-5">

                <div class="col-2"></div>
                <div class="col-8">

                <div class="container">
                    <img src="/img/TristoneLogo.png" class="img-logo rounded mx-auto d-block" alt="Tristone Flowtech">
                    <h1 class="display-4 text-center csvTitulo">Editar Solicitud #<%= id %></h1>
                    <p class="lead text-center"></p>
                    <input type="text" class="form-control text-center" name="id" id="id" value="<%= id %>" hidden>
                </div>
            </div>
        </div>
    </div>




            <div class="container">

                <div class="card-header text-white bg-dark ">
                    <div class="row">

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Semana</label>
                                <div>
                                    <input type="text" class="form-control text-center week-picker" name="week" id="week" required autocomplete="off" disabled>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Motivo</label>
                                <div>
                                    <input type="text" class="form-control text-center" name="selectedMotivo" id="selectedMotivo"
                                        readonly>
                                </div>
                            </div>
                        </div>
                    </div>

                    

                    <div class="col-lg-6 text-center">
                        <div class="form-group">
                            <input type="text" class="form-control text-center" name="startDate" id="startDate" placeholder="YYYY-MM-DD" value="" hidden >
                        </div>
                    </div>
                    <div class="col-lg-6 text-center">
                        <div class="form-group">
                            <input type="text" class="form-control text-center" name="endDate" id="endDate" placeholder="YYYY-MM-DD" value="" hidden >
                        </div>
                    </div>

                </div>

                <div class=" mt-4 text-center">
                    <button id="btnSend" class="btn btn-success"
                        onClick="send()"><span class="fas fa-paper-plane"></span> Enviar Solicitud</button>
                </div>

            </div>
            <div class="container-fluid">
                <div class="table-responsive mt-2">
                    <div class="containerTable">
                        <div class="table table-responsive" id="table">
                            <table id="table2" class="table table-bordered table-striped table-sm hover text-center">
                                <thead class="thead-dark">

                                    <tr>
                                        <th colspan="10" class="bg-transparent border-top-0"></th>
                                        <th colspan="3" class="bg-dark ">Solicitud Actual</th>
                                        <th colspan="3" class="bg-transparent border-top-0"></th>
                                        <th colspan="3" class="bg-dark ">Acumulado</th>
 
                                    </tr>
                                    <tr>

                                    <th width="1%"><span></span> Empleado</th>
                                    <th width="20%"><span></span> Nombre</th>
                                    <th width="4%"><span></span> Turno</th>
                                    <th width="4%"><span></span> L</th>
                                    <th width="4%"><span></span> M</th>
                                    <th width="4%"><span></span> Mc</th>
                                    <th width="4%"><span></span> J </th>
                                    <th width="4%"><span></span> V</th>
                                    <th width="4%"><span></span> S</th>
                                    <th width="4%"><span></span> D</th>
                                    <th width="4%"><span></span>x2</th>
                                    <th width="4%"><span></span>x3</th>
                                    <th width="4%"><span></span> D.L</th>
                                    <th width="10%"><span></span> Area Actual</th>
                                    <th width="15%"><span></span> Area a Laborar</th>
                                    <th width="15%"><span></span>Jefe</th>                               
                                    <th width="4%" ><span></span>x2</th>
                                    <th width="4%" ><span></span>x3</th>
                                    <th width="4%" ><span></span>D.L</th>
                                    <th width="0%" hidden><span hidden></span>jefeid</th>
                                    <th width="0%" hidden><span hidden></span>dl1</th>
                                    <th width="0%" hidden><span hidden></span>dl2</th>
                                    <th width="0%" hidden><span hidden></span>x2</th>
                                    <th width="0%" hidden><span hidden></span>x3</th>

                                </tr>

                                </thead>

                                <tbody>


                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <button id="btnAgregar" class="btn btn-success"
                        onClick="agregar()"><span class="fas fa-plus"></span> Agregar</button>
                </div>

            </div>

       









