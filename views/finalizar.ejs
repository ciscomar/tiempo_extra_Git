            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-1"></div>
                    <div class="col lg-9">
                        <div class="card-header text-white bg-dark ">

                            <div class="row">

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label id="IdSemana">Semana</label>
                                        <div>
                                            <input type="text" class="form-control text-center" name="semana"
                                                id="semana" readonly>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label>Motivo</label>
                                        <div>
                                            <input type="text" class="form-control text-center" name="motivo"
                                                id="motivo" readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 text-center">
                                <div class="form-group">
                                    <input type="text" class="form-control text-center" name="startDate" id="startDate"
                                        placeholder="YYYY-MM-DD" value="" hidden>
                                </div>
                            </div>
                            <div class="col-lg-6 text-center">
                                <div class="form-group">
                                    <input type="text" class="form-control text-center" name="endDate" id="endDate"
                                        placeholder="YYYY-MM-DD" value="" hidden>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="col-lg-2">
                        <div class="row">
                            <div class="col-lg-12 ">
                                <div class="table-responsive-sm">
                                    <table id="tableAcumulado "
                                        class="table table-striped table-bordered table-hover text-center">
                                        <thead>
                                            <tr>
                                                <th colspan="3" class=" bg-info text-white"
                                                    style="border-top-left-radius: 30px !important;" id="numero_semana">
                                                </th>
                                            </tr>
                                            <tr>
                                                <th>X2</th>
                                                <th>X3</th>
                                                <th>x2DL</th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">


                            <div class="col-lg-6">
                                <button id="btnAprobar" class="btn btn-success btn-block"><span
                                        class="fas fa-check"></span>Finalizar</button>
                            </div>
                            <div class="col-lg-6">
                                <button id="btnRechazar" class="btn btn-danger btn-block"><span
                                        class="fas fa-times"></span>
                                    Rechazar</button>
                            </div>

                        </div>
                    </div>

                </div>
            </div>


            <div class="container-fluid">
                <div class="table table-responsive">
                    <table id="table2" class="table-bordered table-striped table-sm hover text-center display">
                        <thead class="thead-dark">

                            <tr>
                                <th colspan="10" class="bg-transparent border-top-0"></th>
                                <th colspan="3" class="bg-dark border-top-0">Solicitud Actual</th>
                                <th colspan="3" class="bg-transparent border-top-0"></th>
                                <th colspan="3" class="bg-dark border-top-0">Acumulado</th>
